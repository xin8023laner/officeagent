<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- SwipeBackLayout Styles -->
    <style name="Theme.Swipe.Back" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 登陆绿色按钮 -->
    <style name="btn_submit">
        <item name="android:background">@drawable/btn_submit_selector</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textColor">@color/bai_ff</item>
        <item name="android:textSize">@dimen/size_32</item>
    </style>

    <style name="WW.tishi">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/juhuang_ff</item>
        <item name="android:textSize">@dimen/size_24</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style  name="ToastDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
         <item name="android:windowNoTitle">true</item>
         <item name="android:windowContentOverlay">@null</item>
         <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style  name="SearchDialog" >
        <item name="android:windowNoTitle">true</item>
         <item name="android:windowContentOverlay">@null</item>
         <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 用于解决每次启动出现的Title -->
    <style name="Theme.Start" parent="android:Theme">
        <item name="android:windowBackground">@drawable/bg_qdy</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- ActionSheet动画 -->
    <style name="ActionSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_actionsheet_enter_translate</item>
        <item name="android:windowExitAnimation">@anim/dialog_actionsheet_exit_translate</item>
    </style>

    <!-- MenuDraw的Style -->
    <style name="Widget" />

    <style name="Widget.MenuDrawer">
        <item name="mdMenuBackground">@color/md__defaultBackground</item>
        <item name="mdContentBackground">?android:attr/windowBackground</item>
    </style>

    <!-- Custom Styles -->
    <!-- M:match_parent W:wrap_content -->
    <style name="MM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WM">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Topbar Styles extends MW_Style -->
    <style name="MW.Topbar">
        <item name="android:background">@color/topbar_background</item>
        <item name="topbarTitleTextColor">@color/topbar_titleTextColor</item>
        <item name="topbarTitleTextSize">18sp</item>
        <item name="android:layout_height">@dimen/topbar_height</item>
        <!-- <item name="topbarBackBg">@drawable/topbar_return_selector</item> -->
        <item name="topbarBackMode">finish</item>
    </style>
    <!-- UItra PullToRefresh Styles extends MW_Style -->
    <style name="MW.UItra_pullToRefresh">
        <item name="ptr_duration_to_close_header">800</item>
        <item name="ptr_keep_header_when_refresh">true</item>
        <item name="ptr_pull_to_fresh">false</item>
        <item name="ptr_ratio_of_header_height_to_refresh">1.2</item>
        <item name="ptr_resistance">2</item>
    </style>

    <style name="MW.linearLayout_menu_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/ll_menu_item_selector</item>
    </style>

    <style name="WW.textView_menu_item">
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/size_30</item>
    </style>

</resources>