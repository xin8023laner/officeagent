<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.gt.officeagent"
    style="@style/MW"
    android:background="@color/color_ffffff"
    android:orientation="vertical" >

    <com.common.ui.Topbar
        style="@style/MW.Topbar"
        app:topbarTitleText="订单详情" />

    <ScrollView style="@style/MW" >

        <LinearLayout
            style="@style/MW"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/WW"
                android:layout_margin="15dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/WW"
                    android:text="付款状态:"
                    android:textColor="@color/hui_90"
                    android:textSize="@dimen/size_26" />

                <TextView
                    android:id="@+id/tv_glorderDetail_payStatus"
                    style="@style/WW"
                    android:text="已付"
                    android:textColor="@color/hong_00"
                    android:textSize="@dimen/size_26" />
            </LinearLayout>

            <LinearLayout
                style="@style/WW"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/WW"
                    android:text="订单状态:"
                    android:textColor="@color/hui_90"
                    android:textSize="@dimen/size_26" />

                <TextView
                    android:id="@+id/tv_glorderDetail_status"
                    style="@style/WW"
                    android:text="待派送"
                    android:textColor="@color/zi_a0"
                    android:textSize="@dimen/size_26" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_glorderDetail_orderCode"
                style="@style/WW"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:text="订单编号：1272839263940"
                android:textColor="@color/hui_90"
                android:textSize="@dimen/size_22" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line" />

            <LinearLayout
                style="@style/MW"
                android:layout_margin="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_glorderDetail_user"
                    style="@style/WW"
                    android:scaleType="center"
                    android:src="@drawable/icon_lvseren" />

                <LinearLayout
                    style="@style/WW"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        style="@style/WW"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/WW"
                            android:text="收货人:"
                            android:textColor="@color/hui_90"
                            android:textSize="@dimen/size_26" />

                        <TextView
                            android:id="@+id/tv_glorderDetail_userName"
                            style="@style/WW"
                            android:layout_marginRight="15dp"
                            android:text="刘佳佳 "
                            android:textColor="@color/hei_43"
                            android:textSize="@dimen/size_26" />

                        <TextView
                            android:id="@+id/tv_glorderDetail_userPhone"
                            style="@style/WW"
                            android:text="12228374627"
                            android:textColor="@color/hei_43"
                            android:textSize="@dimen/size_22" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/WW"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/WW"
                            android:text="收货人地址:"
                            android:textColor="@color/hui_90"
                            android:textSize="@dimen/size_24" />

                        <TextView
                            android:id="@+id/tv_glorderDetail_userAddress"
                            style="@style/WW"
                            android:layout_marginRight="10dp"
                            android:lineSpacingExtra="5dp"
                            android:text="北京市海淀区丹棱街16号 海兴大厦底层底商西塔网络"
                            android:textColor="@color/hei_43"
                            android:textSize="@dimen/size_24" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line" />

            <TextView
                android:id="@+id/tv_glorderDetail_orderTime"
                style="@style/MW"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="创建时间"
                android:textColor="@color/hui_bd"
                android:textSize="@dimen/size_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line" />

            <TextView
                android:id="@+id/tv_glorderDetail_Name"
                style="@style/WW"
                android:layout_margin="15dp"
                android:text="mf"
                android:textColor="@color/hei_43"
                android:textSize="@dimen/size_26" />

            <LinearLayout
                style="@style/MW"
                android:layout_margin="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="商品总数"
                    android:textColor="@color/hui_90"
                    android:textSize="@dimen/size_26" />

                <TextView
                    android:id="@+id/tv_glorderDetail_sumNum"
                    style="@style/WW"
                    android:text="mf"
                    android:textColor="@color/hei_43"
                    android:textSize="@dimen/size_26" />
            </LinearLayout>

            <LinearLayout
                style="@style/MW"
                android:layout_margin="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单价格"
                    android:textColor="@color/hui_90"
                    android:textSize="@dimen/size_26" />

                <TextView
                    android:id="@+id/tv_glorderDetail_sumPrice"
                    style="@style/WW"
                    android:text="mf"
                    android:textColor="@color/hei_43"
                    android:textSize="@dimen/size_26" />
            </LinearLayout>

            <LinearLayout
                style="@style/WW"
                android:layout_gravity="right"
                android:layout_margin="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠价格:"
                    android:textColor="@color/hui_68"
                    android:textSize="@dimen/size_24" />

                <TextView
                    android:id="@+id/tv_glorderDetail_disPrice"
                    style="@style/WW"
                    android:text="mf"
                    android:textColor="@color/hei_43"
                    android:textSize="@dimen/size_26" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>