<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:background="@drawable/dialog_forgetpwd_shape"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_rukutelephone_danhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="修改昵称"
        android:textColor="@color/color_00c987"
        android:textSize="@dimen/size_34" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="@color/divider_line" />

    <EditText
        android:id="@+id/tv_dialog_rukutelephone_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="请输入客户电话号码"
        android:inputType="phone"
        android:maxLength="20"
        android:paddingLeft="10dp"
        android:textColor="@color/hei_25"
        android:textColorHint="@color/hui_99"
        android:textSize="@dimen/size_32" >

        <requestFocus />
    </EditText>
    <!--
<View
            android:layout_width="match_parent"
            android:layout_height="2dp" 
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/divider_line"
            />
    -->

    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <Button
            android:id="@+id/ll_dialog_ruku_queren"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_confirm_selector"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/color_ff6f46"
            android:textSize="@dimen/size_32" />
    </LinearLayout>

</LinearLayout>