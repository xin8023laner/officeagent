<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:background="@color/color_f0"
        android:paddingLeft="10dp"
        android:layout_gravity="center_vertical"
        android:text="A"
        android:textColor="@color/color_33"
        android:textSize="@dimen/size_26"
        android:visibility="gone"
         />

    <LinearLayout
        android:id="@+id/ll_softlist"
        android:layout_width="match_parent"
        android:layout_height="80dip" >

        <com.common.ui.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/carrier_logo_iv"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_gravity="center"
            app:border_color="#bdbdbd"
            app:border_width="1dp" 
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/carrier_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:text="贯通速递"
                android:textColor="@color/color_33"
                android:textSize="@dimen/size_30" />

            <TextView
                android:id="@+id/carrier_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="400——820 8820"
                android:textColor="@color/color_868585"
                android:textSize="@dimen/size_26" />

       
        </LinearLayout>

       
     
    </LinearLayout>

</LinearLayout>