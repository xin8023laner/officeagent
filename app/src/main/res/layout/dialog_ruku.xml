<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_forgetpwd_shape"
    android:gravity="center"
    android:orientation="vertical" >

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/transparent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dip"
        android:gravity="center_horizontal"
        android:text="温馨提示"
        android:textColor="@color/lan_c9"
        android:textSize="@dimen/size_34" />
     <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line" />
    <TextView
        android:id="@+id/tv_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dip"
        android:gravity="center_horizontal"
        android:text="订单已缓存，若下次您更换快递公司，缓存将消失，是否确认返回？"
        android:textColor="@color/color_c4"
        android:textSize="@dimen/size_28" />
	<EditText 
	    android:id="@+id/et_dialog_reason"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="15dip"
	    android:hint="请输入退回原因"
	    android:visibility="gone"
	    />
	<EditText 
	    android:id="@+id/et_dialog_reasonFailure"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="15dip"
	    android:hint="请输入揽收失败原因"
	    android:visibility="gone"
	    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" 
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_search"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/bai_ff"
            android:textSize="@dimen/size_26" />

        <Button
            android:id="@+id/btn_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_search"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/bai_ff"
            android:textSize="@dimen/size_26" />
    </LinearLayout>

</LinearLayout>