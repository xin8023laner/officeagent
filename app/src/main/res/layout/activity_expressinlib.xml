<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.gt.officeagent"
    style="@style/MM"
    android:background="@color/color_f8"
    android:orientation="vertical" >

    <com.common.ui.Topbar
        style="@style/MW.Topbar"
        app:topbarBackBg="@drawable/btn_fanhui_topbar"
        app:topbarBackMode="finish"
        app:topbarTitleText="快件入库" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:gravity="center"
        android:singleLine="true"
        android:text="*该功能与扫描枪功能相同，推荐使用扫描枪入库"
        android:textColor="@color/color_ff6f46"
        android:textSize="@dimen/size_22" />

    <TextView
        android:id="@+id/tv_expressinlib_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:singleLine="true"
        android:text="常用"
        android:textColor="@color/hei"
        android:textSize="@dimen/size_28" />

    <GridView
        android:id="@+id/gv_expressinlib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center"
        android:numColumns="5"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:horizontalSpacing="10dip"
        android:verticalSpacing="15dip"
         />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:layout_marginTop="10dip"
        android:padding="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            
            android:background="@drawable/input_search"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
             >

            <EditText
                android:id="@+id/edt_expressinlib_carrier"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入快递公司"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/hui_43"
                android:textColorHint="@color/hui_c4"
                android:textSize="@dimen/size_28" />

            <ImageView
                android:id="@+id/iv_expressinlib_enter"
                android:layout_width="40dip"
                android:layout_height="match_parent"
                android:src="@drawable/btn_jiantou"
                android:scaleType="center"
                 />
        </LinearLayout>
    </FrameLayout>
    
     <Button
            android:id="@+id/btn_expressinlib_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_exitlogin_selector"
            android:text="下一步"
            android:textColor="@color/bai_ff"
            android:textSize="@dimen/size_32" />

</LinearLayout>