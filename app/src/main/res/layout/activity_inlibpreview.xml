<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.gt.officeagent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.common.ui.Topbar
        style="@style/MW.Topbar"
        app:topbarBackBg="@drawable/btn_fanhui_topbar"
        app:topbarBackMode="finish"
        app:topbarTitleText="快递入库" >
    </com.common.ui.Topbar>

    <LinearLayout
        style="@style/MW"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_inlibpreview_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_inlibpreview_count"
            style="@style/WW" />
    </LinearLayout>

    <LinearLayout
        style="@style/MW"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_scanadapter_del"
            style="@style/WW"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="编号"
            android:textColor="@color/color_ff6f46"
            android:textSize="@dimen/size_28" />

        <TextView
            android:id="@+id/tv_scanadapter_expresscode"
            style="@style/WW"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="快递单号"
            android:textColor="@color/color_ff6f46"
            android:textSize="@dimen/size_28" />

        <TextView
            android:id="@+id/tv_scanadapter_carriername"
            style="@style/WW"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            android:maxLength="11"
            android:singleLine="true"
            android:text="补录号码"
            android:textColor="@color/color_ff6f46"
            android:textSize="@dimen/size_28" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_inlibpreview"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="10dip"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_inlibpreview_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/btn_exitlogin_selector"
        android:text="确定"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/size_30" />

</LinearLayout>