<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai_ff"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_empty_data"
            style="@style/WW"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/kongbaiye_icon_xiaoxihezi_wu" />

        <TextView
            android:id="@+id/tv_nodata_msg"
            style="@style/WW"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:text="xxxxxxxxxxxxxxxxxxx"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/color_c4"
            android:textSize="@dimen/size_26" />
		
        <Button 
            android:id="@+id/btn_empty_data"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:background="@color/color_00c887"
            android:text="重试"
            android:textColor="@color/bai_ff"
            android:textSize="@dimen/size_34"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            />
        
    </LinearLayout>

</RelativeLayout>