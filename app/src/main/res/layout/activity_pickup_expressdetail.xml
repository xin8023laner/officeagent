<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.gt.officeagent"
    style="@style/MM"
    android:background="@color/color_f8" >

    <com.common.ui.Topbar
        style="@style/MW.Topbar"
        app:topbarBackBg="@drawable/btn_fanhui_topbar"
        app:topbarBackMode="finish"
        app:topbarTitleText="订单详情" />

    <ScrollView
        android:id="@+id/slv_pickup_expressdetail"
        style="@style/MM"
        android:layout_above="@+id/ll_btn_submit"
        android:layout_below="@id/topbar"
       >

        <LinearLayout
              android:id="@+id/ll_pickup_expressdetail"
            style="@style/MW"
            
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:padding="15dip" >

                <ImageView
                    android:id="@+id/iv_expressdetail_sendicon"
                    style="@style/WW"
                    android:scaleType="center"
                    android:src="@drawable/icon_lvseren" />

                <TextView
                    android:id="@+id/tv_expressdetail_sendname"
                    style="@style/WW"
                    android:layout_marginLeft="8dip"
                    android:layout_toRightOf="@id/iv_expressdetail_sendicon"
                    android:singleLine="true"
                    android:text="寄件人：猫哭"
                    android:textColor="@color/color_25"
                    android:textSize="@dimen/size_28" />

                <TextView
                    android:id="@+id/tv_expressdetail_sendphone"
                    style="@style/WW"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="45dip"
                    android:layout_toRightOf="@id/tv_expressdetail_sendname"
                    android:singleLine="true"
                    android:text="18500608270"
                    android:textColor="@color/color_25"
                    android:textSize="@dimen/size_28" />

                <TextView
                    android:id="@+id/tv_expressdetail_sendaddr"
                    style="@style/WW"
                    android:layout_below="@id/iv_expressdetail_sendicon"
                    android:layout_marginRight="45dip"
                    android:layout_marginTop="8dip"
                    android:text="海兴大厦b座一层西塔网络 哈哈哈哈哈哈哈哈哈哈哈"
                    android:textColor="@color/color_868585"
                    android:textSize="@dimen/size_26" />

                <ImageView
                    android:id="@+id/iv_expressdetail_call"
                    style="@style/WW"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:src="@drawable/btn_dadianhua" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:background="@color/color_ffffff"
                android:padding="15dip" >

                <ImageView
                    android:id="@+id/iv_expressdetail_receiveicon"
                    style="@style/WW"
                    android:scaleType="center"
                    android:src="@drawable/icon_lanseren" />

                <TextView
                    android:id="@+id/tv_expressdetail_receivename"
                    style="@style/WW"
                    android:layout_marginLeft="8dip"
                    android:layout_toRightOf="@id/iv_expressdetail_receiveicon"
                    android:singleLine="true"
                    android:text="收件人：猫哭"
                    android:textColor="@color/color_25"
                    android:textSize="@dimen/size_28" />

                <TextView
                    android:id="@+id/tv_expressdetail_receivephone"
                    style="@style/WW"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="45dip"
                    android:layout_toRightOf="@id/tv_expressdetail_receivename"
                    android:singleLine="true"
                    android:text="18500608270"
                    android:textColor="@color/color_25"
                    android:textSize="@dimen/size_28" />

                <TextView
                    android:id="@+id/tv_expressdetail_receiveaddr"
                    style="@style/WW"
                    android:layout_below="@id/iv_expressdetail_receiveicon"
                    android:layout_marginTop="8dip"
                    android:text="海兴大厦b座一层西塔网络 哈哈哈哈哈哈哈哈哈哈哈"
                    android:textColor="@color/color_868585"
                    android:textSize="@dimen/size_26" />
            </RelativeLayout>
 <TextView
                    android:id="@+id/tv_expressdetail_carriercodegone"
                    style="@style/WW"
                    android:layout_marginLeft="15dip"
                    android:singleLine="true"
                    android:text="快递公司：圆通快递"
                    android:textColor="@color/color_25"
                    android:textSize="@dimen/size_28" 
                    android:visibility="gone"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:background="@color/color_ffffff"
                android:padding="15dip" >

                <ImageView
                    android:id="@+id/iv_expressdetail_carriernameicon"
                    style="@style/WW"
                    android:scaleType="center"
                    android:src="@drawable/icon_kuaidigongsi" />

                <TextView
                    android:id="@+id/tv_expressdetail_carriername"
                    style="@style/WW"
                    android:layout_marginLeft="8dip"
                    android:layout_toRightOf="@id/iv_expressdetail_carriernameicon"
                    android:singleLine="true"
                    android:text="快递公司：圆通快递"
                    android:textColor="@color/color_25"
                    android:textSize="@dimen/size_28" />

                <ImageView
                    android:id="@+id/iv_expressdetail_weighticon"
                    style="@style/WW"
                    android:layout_below="@id/iv_expressdetail_carriernameicon"
                    android:layout_marginTop="20dip"
                    android:scaleType="center"
                    android:src="@drawable/icon_zhongliang" />

                <TextView
                    android:id="@+id/tv_expressdetail_weight"
                    style="@style/WW"
                    android:layout_below="@id/iv_expressdetail_carriernameicon"
                    android:layout_marginLeft="8dip"
                    android:layout_marginTop="15dip"
                    android:layout_toRightOf="@id/iv_expressdetail_weighticon"
                    android:text="物品重量：18kg"
                    android:textColor="@color/color_25"
                    android:textSize="@dimen/size_28" />

                <ImageView
                    android:id="@+id/iv_expressdetail_timeicon"
                    style="@style/WW"
                    android:layout_below="@id/iv_expressdetail_weighticon"
                    android:layout_marginTop="20dip"
                    android:scaleType="center"
                    android:src="@drawable/icon_qujianshijian" />

                <TextView
                    android:id="@+id/tv_expressdetail_time"
                    style="@style/WW"
                    android:layout_below="@id/iv_expressdetail_weighticon"
                    android:layout_marginLeft="8dip"
                    android:layout_marginTop="20dip"
                    android:layout_toRightOf="@id/iv_expressdetail_timeicon"
                    android:text="期望取件时间：5-15 12：00-15：00"
                    android:textColor="@color/color_25"
                    android:textSize="@dimen/size_28" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_expressdetail_lable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:background="@color/color_ffffff"
                android:padding="15dip" >

                <TextView
                    android:id="@+id/tv_expressdetail_moneylable"
                    android:layout_width="94dip"
                    android:layout_height="40dip"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="快件收费："
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/size_28" />

                <EditText
                    android:id="@+id/edt_expressdetail_money"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/tv_expressdetail_moneylable"
                    android:background="@drawable/bg_edittext"
                    android:hint="请输入揽收价格"
                    android:padding="5dip"
                    android:singleLine="true"
                    android:textColor="@color/color_33"
                    android:textColorHint="@color/color_99"
                    android:textSize="@dimen/size_28" 
                    android:inputType="phone"/>

                <TextView
                    android:id="@+id/tv_expressdetail_weightlable"
                    android:layout_width="94dip"
                    android:layout_height="40dip"
                    android:layout_below="@id/tv_expressdetail_moneylable"
                    android:layout_marginTop="20dip"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="实际重量："
                    android:layout_alignRight="@id/tv_expressdetail_moneylable"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/size_28" 
                    />

                <EditText
                    android:id="@+id/edt_expressdetail_weight"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_below="@id/tv_expressdetail_moneylable"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="20dip"
                    android:layout_toRightOf="@id/tv_expressdetail_weightlable"
                    android:background="@drawable/bg_edittext"
                    android:hint="请输入实际重量"
                    android:padding="5dip"
                    android:singleLine="true"
                    android:textColor="@color/color_33"
                    android:textColorHint="@color/color_99"
                    android:textSize="@dimen/size_28" 
                     android:inputType="phone"/>

                <TextView
                    android:id="@+id/tv_expressdetail_typelabel"
                    android:layout_width="94dip"
                    android:layout_height="40dip"
                    android:layout_below="@id/tv_expressdetail_weightlable"
                    android:layout_marginTop="20dip"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="物品名称："
                    android:layout_alignRight="@id/tv_expressdetail_moneylable"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/size_28" />

                <EditText
                    android:id="@+id/edt_expressdetail_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_below="@id/tv_expressdetail_weightlable"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="20dip"
                    android:layout_toRightOf="@id/tv_expressdetail_typelabel"
                    android:background="@drawable/bg_edittext"
                    android:hint="请输入品名"
                    android:padding="5dip"
                    android:singleLine="true"
                    android:textColor="@color/color_33"
                    android:textColorHint="@color/color_99"
                    android:textSize="@dimen/size_28" />

                <TextView
                    android:id="@+id/tv_expressdetail_remarklabel"
                    android:layout_width="94dip"
                    android:layout_height="40dip"
                    android:layout_below="@id/tv_expressdetail_typelabel"
                    android:layout_marginTop="20dip"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="备注信息："
                    android:layout_alignRight="@id/tv_expressdetail_moneylable"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/size_28" />

                <EditText
                    android:id="@+id/edt_expressdetail_remark"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_below="@id/tv_expressdetail_typelabel"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="20dip"
                    android:layout_toRightOf="@id/tv_expressdetail_remarklabel"
                    android:background="@drawable/bg_edittext"
                    android:hint="请输入备注"
                    android:padding="5dip"
                    android:singleLine="true"
                    android:textColor="@color/color_33"
                    android:textColorHint="@color/color_99"
                    android:textSize="@dimen/size_28" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llpickup_expressdetail_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:background="@color/color_ffffff"
                android:padding="15dip" >

                <TextView
                    android:id="@+id/tv_expressdetail_codelabel"
                    android:layout_width="94dip"
                    android:layout_height="40dip"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="输入单号："
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/size_28" />

                <LinearLayout
                    android:id="@+id/ll_expressdetail_code"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="@drawable/input_search"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <EditText
                        android:id="@+id/edt_expressdetail_expresscode"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
                        android:hint="输入或扫描快递单号"
                        android:inputType="number|text"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textColor="@color/hui_43"
                        android:textColorHint="@color/hui_c4"
                        android:textSize="@dimen/size_28" />

                    <ImageView
                        android:id="@+id/iv_expressdetail_scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_saomiao" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_btn_submit"
        style="@style/MW"
        android:layout_alignParentBottom="true"
        android:background="@color/color_f8"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/MM"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="20dip" >

            <Button
                android:id="@+id/btn_expressdetail_return"
                android:layout_width="0dip"
                android:layout_height="41dip"
                android:layout_gravity="center_horizontal"
                android:layout_weight="3"
                android:background="@color/color_ff6f46"
                android:text="退回"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/size_32" />
            <Button
                android:id="@+id/btn_expressdetail_failure"
                android:layout_width="wrap_content"
                android:layout_height="41dip"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/lan_cc"
                android:layout_marginLeft="15dip"
                android:text="揽收失败"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/size_32" />

            <Button
                android:id="@+id/btn_expressdetail_submit"
                android:layout_width="0dip"
                android:layout_height="41dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dip"
                android:layout_weight="5"
                android:background="@color/color_00c887"
                android:text="提交"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/size_32" />
        </LinearLayout>

        <TextView
            style="@style/WW"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="17dip"
            android:layout_marginTop="14dip"
            android:text="温馨提示：确认提交了，不可更改了！"
            android:textColor="@color/color_00c887"
            android:textSize="@dimen/size_24" />
    </LinearLayout>

</RelativeLayout>