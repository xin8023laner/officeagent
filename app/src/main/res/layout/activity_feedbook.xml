<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/iv_feedbookBg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha="0.1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RadioGroup
                    android:id="@+id/rg_feedbookRg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/rb_feedbookYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:button="@null"
                        android:checked="true"
                        android:drawablePadding="5dip"
                        android:text="赞一个"
                        android:textSize="17sp" />

                    <RadioButton
                        android:id="@+id/rb_feedbookNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dip"
                        android:button="@null"
                        android:drawablePadding="5dip"
                        android:text="吐一下"
                        android:textSize="17sp" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/ll_feedbookChangeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/et_feedbookContent"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="请输入您对我们的建议（字数限50字）"
                        android:lines="7"
                        android:maxLength="50"
                        android:paddingLeft="5dp" />
                </LinearLayout>
            </FrameLayout>

            <Button
                android:id="@+id/btn_feedbookSubmit"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:text="提 交"
                android:textColor="#ffffff"
                android:textSize="@dimen/size_34" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>