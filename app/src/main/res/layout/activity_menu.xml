<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gt.officeagent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_1c936d"
    android:orientation="vertical" >

    <com.common.ui.CircleImageView
        android:id="@+id/civ_menu_head"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/head_moren"
        app:border_color="@color/bai_ff"
        app:border_width="2dp" />

    <TextView
        android:id="@+id/tv_menu_nickname"
        style="@style/WW"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="猫哭"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/size_30" />

    <TextView
        android:id="@+id/tv_menu_telphone"
        style="@style/WW"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="点击登陆"
        android:textColor="@color/color_a8dccb"
        android:textSize="@dimen/size_26" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dp"
        android:background="@drawable/line_menu" />
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        >
    <RelativeLayout
        android:id="@+id/rl_menu_kehuziti"
        style="@style/MW.linearLayout_menu_item"
        android:layout_marginTop="10dp"
        android:orientation="vertical" 
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_memu_kehuziti"
            style="@style/WW"
            android:layout_marginLeft="21dp"
            android:src="@drawable/icon_kehuziti_cehua" />

        <TextView
            android:id="@+id/tv_menu_kehuziti"
            style="@style/WW.textView_menu_item"
            android:layout_alignTop="@id/iv_memu_kehuziti"
            android:layout_toRightOf="@id/iv_memu_kehuziti"
            android:text="客户自提" />

        <TextView
            style="@style/WW"
            android:layout_below="@id/tv_menu_kehuziti"
            android:layout_marginLeft="17dip"
            android:layout_toRightOf="@id/iv_memu_kehuziti"
            android:text="与客户进行自提件交接"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_7cc5ad"
            android:textSize="@dimen/size_20" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_menu_kuaijianchaxun"
        style="@style/MW.linearLayout_menu_item"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_memu_kuaijianchaxun"
            style="@style/WW"
            android:layout_marginLeft="21dp"
            android:src="@drawable/icon_kuaijianchaxun_cehua" />

        <TextView
            android:id="@+id/tv_menu_kuaijianchaxun"
            style="@style/WW.textView_menu_item"
            android:layout_alignTop="@id/iv_memu_kuaijianchaxun"
            android:layout_toRightOf="@id/iv_memu_kuaijianchaxun"
            android:text="快件查询" />

        <TextView
            style="@style/WW"
            android:layout_below="@id/tv_menu_kuaijianchaxun"
            android:layout_marginLeft="17dip"
            android:layout_toRightOf="@id/iv_memu_kuaijianchaxun"
            android:text="可查看订单的操作记录"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_7cc5ad"
            android:textSize="@dimen/size_26" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_menu_GLOrders"
        style="@style/MW.linearLayout_menu_item"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_memu_GLOrders"
            style="@style/WW"
            android:layout_marginLeft="21dp"
            android:src="@drawable/icon_book_cehua" />

        <TextView
            android:id="@+id/tv_menu_GLOrders"
            style="@style/WW.textView_menu_item"
            android:layout_alignTop="@id/iv_memu_GLOrders"
            android:layout_toRightOf="@id/iv_memu_GLOrders"
            android:text="购啦订单" />

        <TextView
            style="@style/WW"
            android:layout_below="@id/tv_menu_GLOrders"
            android:layout_marginLeft="17dip"
            android:layout_toRightOf="@id/iv_memu_GLOrders"
            android:text="可查看够啦的所有订单"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_7cc5ad"
            android:textSize="@dimen/size_20" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_menu_contact"
        style="@style/MW.linearLayout_menu_item"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_memu_contact"
            style="@style/WW"
            android:layout_marginLeft="21dp"
            android:src="@drawable/icon_kuaijianchaxun_cehua" />

        <TextView
            android:id="@+id/tv_menu_contact"
            style="@style/WW.textView_menu_item"
            android:layout_alignTop="@id/iv_memu_contact"
            android:layout_toRightOf="@id/iv_memu_contact"
            android:text="联系客户" />

        <TextView
            style="@style/WW"
            android:layout_below="@id/tv_menu_contact"
            android:layout_marginLeft="17dip"
            android:layout_toRightOf="@id/iv_memu_contact"
            android:text="与客户进行联系"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_7cc5ad"
            android:textSize="@dimen/size_20" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_menu_luru"
        style="@style/MW.linearLayout_menu_item"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_memu_luru"
            style="@style/WW"
            android:layout_marginLeft="21dp"
            android:src="@drawable/icon_luru" />

        <TextView
            android:id="@+id/tv_menu_luru"
            style="@style/WW.textView_menu_item"
            android:layout_alignTop="@id/iv_memu_luru"
            android:layout_toRightOf="@id/iv_memu_luru"
            android:text="录入信息" />

        <TextView
            style="@style/WW"
            android:layout_below="@id/tv_menu_luru"
            android:layout_marginLeft="17dip"
            android:layout_toRightOf="@id/iv_memu_luru"
            android:text="手机录入更方便"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_7cc5ad"
            android:textSize="@dimen/size_20" />
    </RelativeLayout>
 </LinearLayout>
</ScrollView>
    <RelativeLayout
        style="@style/MW"
        android:layout_marginBottom="15dp" >

        <ImageView
            android:id="@+id/iv_menu_erweima"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_erweima" />

        <TextView
            android:id="@+id/tv_menu_scanDownload"
            style="@style/WW"
            android:layout_alignTop="@id/iv_menu_erweima"
            android:layout_margin="5dip"
            android:layout_toRightOf="@id/iv_menu_erweima"
            android:text="扫描下载\n指尖快递APP"
            android:lineSpacingExtra="5dip"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/size_22" />

