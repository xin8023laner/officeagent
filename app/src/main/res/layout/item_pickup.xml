<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MW"
    android:background="@color/color_ffffff" >

    <ImageView
        android:id="@+id/iv_pickup_icon"
        style="@style/WW"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="15dip"
        android:scaleType="center"
        android:src="@drawable/icon_lvseren" />

    <RelativeLayout
        android:id="@+id/rl_pickup_part"
        style="@style/MW"
        android:layout_toRightOf="@id/iv_pickup_icon"
        android:background="@color/color_ffffff" >

        <TextView
            android:id="@+id/tv_pickup_name"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:singleLine="true"
            android:text="猫哭"
            android:textColor="@color/color_25"
            android:textSize="@dimen/size_28" />

        <TextView
            android:id="@+id/tv_pickup_ordertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/tv_pickup_name"
            android:singleLine="true"
            android:text="5月17日 17：45"
            android:textColor="@color/color_ff6f46"
            android:textSize="@dimen/size_22" />

        <TextView
            android:id="@+id/tv_pickup_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_pickup_name"
            android:layout_below="@id/tv_pickup_name"
            android:layout_marginTop="7dip"
            android:text="18500608270"
            android:textColor="@color/color_868585"
            android:textSize="@dimen/size_28" />

        <TextView
            android:id="@+id/tv_pickup_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_pickup_name"
            android:layout_marginRight="60dip"
            android:layout_marginTop="7dip"
            android:text="待入库"
            android:textColor="@color/color_00c987"
            android:textSize="@dimen/size_28" />

        <TextView
            android:id="@+id/tv_pickup_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_pickup_name"
            android:layout_below="@id/tv_pickup_phone"
            android:layout_marginRight="60dip"
            android:layout_marginTop="13dip"
            android:text="北京海淀海兴大厦B座一层西塔网络1002号567室"
            android:textColor="@color/color_868585"
            android:textSize="@dimen/size_28" />

        <ImageView
            android:id="@+id/iv_pickup_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:scaleType="center"
            android:src="@drawable/btn_dadianhua" />

        <View
            android:id="@+id/v_pickup_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_below="@id/tv_pickup_addr"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="7dip"
            android:background="@color/color_9e" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_pickup_wishtime"
        style="@style/MW"
        android:layout_below="@id/rl_pickup_part"
        android:layout_toRightOf="@id/iv_pickup_icon" >

        <TextView
            android:id="@+id/tv_pickup_wishtime"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="期望取件时间：7月11日 12：00-15：00"
            android:textColor="@color/color_25"
            android:textSize="@dimen/size_28" />

        <ImageView
            android:id="@+id/iv_pickup_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dip"
            android:scaleType="center"
            android:src="@drawable/btn_jiantou" />
    </LinearLayout>

</RelativeLayout>